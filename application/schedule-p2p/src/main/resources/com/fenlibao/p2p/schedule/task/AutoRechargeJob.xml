<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 自动投标 -->
	<bean id="autoRechargeJob"
		class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" value="com.fenlibao.p2p.schedule.task.AutoRechargeJob" />
		<property name="durability" value="true" />
		<property name="requestsRecovery" value="true" />
	</bean>


	<bean id="autoRechargeJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="autoRechargeJob" />
		<property name="cronExpression" value="0 */1 * * * ?" />
	</bean>

</beans>
